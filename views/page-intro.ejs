<script>
//Trigger when all recommendation card has been fetched
$(document).ready(function () {
  animateInView();
});

//Trigger events when objects scroll into view
$(window).scroll(function () {
  animateInView();
});

function animateInView() {
  var scrolledAmount = $(window).scrollTop(),
    bottomOfWindow = scrolledAmount + $(window).height();

  $(".card").each(function () {
    var cardTop = $(this).offset().top;

    if (cardTop <= bottomOfWindow) {
      $(this).addClass("animate");
    }
    // else is for testing only without refreshing. remove later.
    else {
      $(this).removeClass("animate");
    }
  });
}
</script>
